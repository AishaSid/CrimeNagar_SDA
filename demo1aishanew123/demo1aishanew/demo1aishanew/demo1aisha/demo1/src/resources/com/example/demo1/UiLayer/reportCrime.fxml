        <!-- Crime Description -->
        <TextField fx:id="crimeDescription" prefWidth="300.0" promptText="Describe the crime" style="-fx-background-color: #f9f9f9; -fx-background-radius: 10; -fx-padding: 10; -fx-border-color: #d1d9e6; -fx-border-radius: 10;" />

